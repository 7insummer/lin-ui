<view wx:if="{{show}}" class="{{part?'l-status-container-part':'l-status-container'}} l-class l-container-class" style="{{'background:'+bgColor}}" bind:tap="tapStatusShow">
  <block wx:if="{{custom}}">
    <slot />
  </block>
  <block wx:else>
    <image wx:if="{{image}}" style="margin-top:{{part?0:top}}rpx;" class="left-img l-image-class" src="{{image}}"></image>
    <image wx:else style="margin-top:{{part?0:top}}rpx;" class="{{type=='success'||type=='error'?'left-img':'top-img'}} {{type=='address'?'ad-img':''}} l-image-class" src="{{typeImage}}"></image>
    <text wx:if="{{describe}}" class="status-text l-describe-class">{{describe}}</text>
    <text wx:else class="{{part?'status-text-part':'status-text'}} l-describe-class">{{typeText}}</text>
    <l-button l-class="l-button-class" wx:if="{{buttonText}}" style="{{part?'':'margin-top:80rpx'}}" bgColor="{{buttonColor}}">
      {{buttonText}}
    </l-button>
    <l-button l-class="l-button-class" wx:if="{{!buttonText && type =='network'}}" style="margin-top:80rpx" bgColor="{{buttonColor}}">
      重新加载
    </l-button>
    <l-button l-class="l-button-class" wx:if="{{!buttonText && type =='cart'}}" style="margin-top:80rpx" bgColor="{{buttonColor}}">
      去逛逛
    </l-button>
  </block>
</view>